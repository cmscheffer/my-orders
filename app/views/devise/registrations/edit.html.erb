<div class="row justify-content-center mt-4">
  <div class="col-md-6">
    <div class="card">
      <div class="card-body p-4">
        <h2 class="mb-4">Editar Perfil</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="mb-3">
            <%= f.label :name, "Nome Completo", class: "form-label" %>
            <%= f.text_field :name, autofocus: true, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :email, "Email", class: "form-label" %>
            <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="alert alert-info">
              Aguardando confirmação para: <%= resource.unconfirmed_email %>
            </div>
          <% end %>

          <!-- Alterar Senha (Opcional) -->
          <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> 
            <strong>Alterar senha:</strong> Preencha apenas se desejar alterar. Deixe em branco para manter a senha atual.
          </div>

          <!-- Requisitos de Senha -->
          <div class="collapse" id="passwordRequirements">
            <%= password_requirements_list %>
          </div>

          <div class="mb-3">
            <%= f.label :password, "Nova Senha", class: "form-label" %>
            <%= f.password_field :password, 
                autocomplete: "new-password", 
                class: "form-control", 
                placeholder: "Deixe em branco se não quiser alterar",
                data: { 
                  strength_indicator: "password-strength-indicator-edit",
                  bs_toggle: "collapse",
                  bs_target: "#passwordRequirements"
                },
                onfocus: "document.getElementById('passwordRequirements').classList.add('show')" %>
            
            <!-- Indicador de Força -->
            <div id="password-strength-indicator-edit" class="password-strength-indicator mt-2" style="display: none;">
              <small class="text-muted">Força da senha: </small>
              <span class="password-strength-text fw-bold"></span>
              <div class="progress mt-1" style="height: 5px;">
                <div class="progress-bar password-strength-bar" 
                     role="progressbar"
                     style="width: 0%"
                     aria-valuenow="0"
                     aria-valuemin="0"
                     aria-valuemax="100"></div>
              </div>
            </div>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, "Confirmar Nova Senha", class: "form-label" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :current_password, "Senha Atual", class: "form-label" %>
            <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder: "Digite sua senha atual para confirmar" %>
            <small class="form-text text-muted">
              (necessário para confirmar as alterações)
            </small>
          </div>

          <div class="d-grid gap-2 mb-3">
            <%= f.submit "Atualizar Perfil", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>

        <hr>

        <h5 class="mb-3">Cancelar Conta</h5>
        <p class="text-muted">Não está satisfeito?</p>
        <%= button_to "Cancelar minha conta", 
                      registration_path(resource_name), 
                      data: { confirm: "Tem certeza? Esta ação não pode ser desfeita.", turbo_confirm: "Tem certeza? Esta ação não pode ser desfeita." }, 
                      method: :delete,
                      class: "btn btn-danger" %>

        <div class="mt-3">
          <%= link_to "Voltar", :back, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>
