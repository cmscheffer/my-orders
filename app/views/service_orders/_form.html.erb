<%= form_with(model: service_order, local: true, class: "needs-validation") do |form| %>
  <% if service_order.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading">
        <%= pluralize(service_order.errors.count, "erro") %> impediram a gravação:
      </h4>
      <ul class="mb-0">
        <% service_order.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-8">
      <div class="mb-3">
        <%= form.label :title, "Título", class: "form-label" %>
        <%= form.text_field :title, class: "form-control", placeholder: "Ex: Manutenção de equipamento" %>
      </div>

      <div class="mb-3">
        <%= form.label :description, "Descrição", class: "form-label" %>
        <%= form.text_area :description, rows: 5, class: "form-control", placeholder: "Descreva os detalhes da ordem de serviço..." %>
      </div>
    </div>

    <div class="col-md-4">
      <div class="mb-3">
        <%= form.label :status, "Status", class: "form-label" %>
        <%= form.select :status, 
                        ServiceOrder.statuses.keys.map { |s| [s.humanize, s] },
                        {},
                        class: "form-select" %>
      </div>

      <div class="mb-3">
        <%= form.label :priority, "Prioridade", class: "form-label" %>
        <%= form.select :priority,
                        ServiceOrder.priorities.keys.map { |p| [p.humanize, p] },
                        {},
                        class: "form-select" %>
      </div>

      <div class="mb-3">
        <%= form.label :due_date, "Data de Vencimento", class: "form-label" %>
        <%= form.date_field :due_date, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="card mb-4">
    <div class="card-header">
      <h5 class="mb-0">Informações do Equipamento</h5>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <div class="mb-3">
            <%= form.label :equipment_name, "Nome/Tipo do Equipamento", class: "form-label" %>
            <%= form.text_field :equipment_name, class: "form-control", placeholder: "Ex: Notebook, Impressora, Servidor" %>
          </div>
        </div>

        <div class="col-md-6">
          <div class="mb-3">
            <%= form.label :equipment_brand, "Marca", class: "form-label" %>
            <%= form.text_field :equipment_brand, class: "form-control", placeholder: "Ex: HP, Dell, Lenovo" %>
          </div>
        </div>

        <div class="col-md-6">
          <div class="mb-3">
            <%= form.label :equipment_model, "Modelo", class: "form-label" %>
            <%= form.text_field :equipment_model, class: "form-control", placeholder: "Ex: Latitude 5420, LaserJet Pro" %>
          </div>
        </div>

        <div class="col-md-6">
          <div class="mb-3">
            <%= form.label :equipment_serial, "Número de Série", class: "form-label" %>
            <%= form.text_field :equipment_serial, class: "form-control", placeholder: "Ex: SN123456789" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%= render 'parts_fields', form: form, service_order: service_order %>

  <div class="card mb-4">
    <div class="card-header">
      <h5 class="mb-0">Informações do Cliente</h5>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-4">
          <div class="mb-3">
            <%= form.label :customer_name, "Nome do Cliente", class: "form-label" %>
            <%= form.text_field :customer_name, class: "form-control", placeholder: "Nome completo" %>
          </div>
        </div>

        <div class="col-md-4">
          <div class="mb-3">
            <%= form.label :customer_email, "Email", class: "form-label" %>
            <%= form.email_field :customer_email, class: "form-control", placeholder: "email@exemplo.com" %>
          </div>
        </div>

        <div class="col-md-4">
          <div class="mb-3">
            <%= form.label :customer_phone, "Telefone", class: "form-label" %>
            <%= form.text_field :customer_phone, class: "form-control", placeholder: "(00) 00000-0000" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="card mb-4">
    <div class="card-header">
      <h5 class="mb-0">Informações Financeiras</h5>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-4">
          <div class="mb-3">
            <%= form.label :service_value, "Valor do Serviço (R$)", class: "form-label" %>
            <%= form.number_field :service_value, step: 0.01, class: "form-control", placeholder: "0,00" %>
            <small class="text-muted">Valor da mão de obra</small>
          </div>
        </div>

        <div class="col-md-4">
          <div class="mb-3">
            <%= form.label :parts_value, "Valor das Peças (R$)", class: "form-label" %>
            <%= form.number_field :parts_value, step: 0.01, class: "form-control", placeholder: "0,00" %>
            <small class="text-muted">Valor de peças/componentes</small>
          </div>
        </div>

        <div class="col-md-4">
          <div class="mb-3">
            <%= form.label :payment_status, "Status do Pagamento", class: "form-label" %>
            <%= form.select :payment_status,
                            options_for_select([
                              ['Pendente', 'pending_payment'],
                              ['Pago', 'paid'],
                              ['Pago Parcialmente', 'partially_paid'],
                              ['Cancelado', 'cancelled_payment']
                            ], service_order.payment_status),
                            { include_blank: "Selecione" },
                            class: "form-select" %>
          </div>
        </div>

        <div class="col-md-6">
          <div class="mb-3">
            <%= form.label :payment_method, "Forma de Pagamento", class: "form-label" %>
            <%= form.select :payment_method,
                            options_for_select([
                              'Dinheiro',
                              'Cartão de Crédito',
                              'Cartão de Débito',
                              'PIX',
                              'Transferência Bancária',
                              'Boleto',
                              'Cheque'
                            ], service_order.payment_method),
                            { include_blank: "Selecione" },
                            class: "form-select" %>
          </div>
        </div>

        <div class="col-md-6">
          <div class="mb-3">
            <%= form.label :payment_date, "Data do Pagamento", class: "form-label" %>
            <%= form.date_field :payment_date, class: "form-control" %>
          </div>
        </div>

        <div class="col-md-12">
          <div class="mb-3">
            <%= form.label :notes, "Observações Financeiras", class: "form-label" %>
            <%= form.text_area :notes, rows: 3, class: "form-control", placeholder: "Informações adicionais sobre pagamento, descontos, etc." %>
          </div>
        </div>
      </div>

      <div class="alert alert-info">
        <strong><i class="fas fa-info-circle"></i> Valor Total:</strong>
        O valor total será calculado automaticamente (Serviço + Peças)
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-between">
    <%= link_to "Cancelar", service_orders_path, class: "btn btn-secondary" %>
    <%= form.submit class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
