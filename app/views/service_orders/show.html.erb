<div class="row mb-4">
  <div class="col">
    <h1 class="display-4">Ordem de Serviço #<%= @service_order.id %></h1>
  </div>
  <div class="col text-end">
    <%= link_to "Voltar", service_orders_path, class: "btn btn-secondary" %>
    <% if current_user.admin? || @service_order.user == current_user %>
      <%= link_to "Editar", edit_service_order_path(@service_order), class: "btn btn-warning" %>
      <%= button_to "Excluir", service_order_path(@service_order), 
                    method: :delete, 
                    data: { confirm: "Tem certeza?" },
                    class: "btn btn-danger" %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    <div class="card mb-4">
      <div class="card-header">
        <h5 class="mb-0">Detalhes da Ordem de Serviço</h5>
      </div>
      <div class="card-body">
        <dl class="row">
          <dt class="col-sm-3">Título:</dt>
          <dd class="col-sm-9"><%= @service_order.title %></dd>
          
          <dt class="col-sm-3">Descrição:</dt>
          <dd class="col-sm-9"><%= simple_format(@service_order.description) %></dd>
          
          <dt class="col-sm-3">Status:</dt>
          <dd class="col-sm-9">
            <span class="badge <%= @service_order.status_badge_class %>">
              <%= @service_order.status.humanize %>
            </span>
          </dd>
          
          <dt class="col-sm-3">Prioridade:</dt>
          <dd class="col-sm-9">
            <span class="badge <%= @service_order.priority_badge_class %>">
              <%= @service_order.priority.humanize %>
            </span>
          </dd>
          
          <dt class="col-sm-3">Data de Vencimento:</dt>
          <dd class="col-sm-9">
            <%= @service_order.due_date ? l(@service_order.due_date, format: :long) : "-" %>
            <% if @service_order.overdue? %>
              <span class="badge bg-danger ms-2">Atrasada</span>
            <% end %>
          </dd>
          
          <dt class="col-sm-3">Criado em:</dt>
          <dd class="col-sm-9"><%= l(@service_order.created_at, format: :long) %></dd>
          
          <% if @service_order.completed? %>
            <dt class="col-sm-3">Concluído em:</dt>
            <dd class="col-sm-9"><%= l(@service_order.completed_at, format: :long) %></dd>
          <% end %>
          
          <dt class="col-sm-3">Criado por:</dt>
          <dd class="col-sm-9"><%= @service_order.user.name %></dd>

          <dt class="col-sm-3">Técnico:</dt>
          <dd class="col-sm-9">
            <% if @service_order.technician.present? %>
              <%= link_to @service_order.technician.full_info, @service_order.technician, class: "text-decoration-none" %>
              <span class="badge <%= @service_order.technician.status_badge_class %> ms-2">
                <%= @service_order.technician.status_text %>
              </span>
            <% else %>
              <span class="text-muted">Nenhum técnico atribuído</span>
            <% end %>
          </dd>
        </dl>
      </div>
    </div>
    
    <div class="card mb-4">
      <div class="card-header">
        <h5 class="mb-0">Informações do Equipamento</h5>
      </div>
      <div class="card-body">
        <dl class="row">
          <dt class="col-sm-3">Equipamento:</dt>
          <dd class="col-sm-9"><%= @service_order.equipment_name || "-" %></dd>
          
          <dt class="col-sm-3">Marca:</dt>
          <dd class="col-sm-9"><%= @service_order.equipment_brand || "-" %></dd>
          
          <dt class="col-sm-3">Modelo:</dt>
          <dd class="col-sm-9"><%= @service_order.equipment_model || "-" %></dd>
          
          <dt class="col-sm-3">Número de Série:</dt>
          <dd class="col-sm-9">
            <% if @service_order.equipment_serial.present? %>
              <code><%= @service_order.equipment_serial %></code>
            <% else %>
              -
            <% end %>
          </dd>
        </dl>
      </div>
    </div>

    <% if @service_order.service_order_parts.any? %>
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="mb-0">Peças Utilizadas</h5>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-sm">
              <thead>
                <tr>
                  <th>Código</th>
                  <th>Peça</th>
                  <th>Quantidade</th>
                  <th>Preço Unit.</th>
                  <th>Total</th>
                </tr>
              </thead>
              <tbody>
                <% @service_order.service_order_parts.includes(:part).each do |sop| %>
                  <tr>
                    <td><code><%= sop.part.code || "-" %></code></td>
                    <td>
                      <%= link_to sop.part.name, part_path(sop.part), target: "_blank" %>
                      <% if sop.part.brand.present? %>
                        <br><small class="text-muted"><%= sop.part.brand %></small>
                      <% end %>
                    </td>
                    <td><%= sop.quantity %> <%= sop.part.unit %></td>
                    <td><%= sop.formatted_unit_price %></td>
                    <td><strong><%= sop.formatted_total_price %></strong></td>
                  </tr>
                <% end %>
              </tbody>
              <tfoot>
                <tr class="table-light">
                  <td colspan="4" class="text-end"><strong>Total das Peças:</strong></td>
                  <td><strong class="text-success"><%= @service_order.formatted_parts_value %></strong></td>
                </tr>
              </tfoot>
            </table>
          </div>
        </div>
      </div>
    <% end %>
    
    <div class="card mb-4">
      <div class="card-header">
        <h5 class="mb-0">Informações do Cliente</h5>
      </div>
      <div class="card-body">
        <dl class="row">
          <dt class="col-sm-3">Nome:</dt>
          <dd class="col-sm-9"><%= @service_order.customer_name || "-" %></dd>
          
          <dt class="col-sm-3">Email:</dt>
          <dd class="col-sm-9"><%= @service_order.customer_email || "-" %></dd>
          
          <dt class="col-sm-3">Telefone:</dt>
          <dd class="col-sm-9"><%= @service_order.customer_phone || "-" %></dd>
        </dl>
      </div>
    </div>

    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Informações Financeiras</h5>
        <% if @service_order.payment_status.present? %>
          <span class="badge <%= @service_order.payment_status_badge_class %>">
            <%= @service_order.payment_status.humanize %>
          </span>
        <% end %>
      </div>
      <div class="card-body">
        <dl class="row">
          <dt class="col-sm-4">Valor do Serviço:</dt>
          <dd class="col-sm-8"><strong><%= @service_order.formatted_service_value %></strong></dd>
          
          <dt class="col-sm-4">Valor das Peças:</dt>
          <dd class="col-sm-8"><strong><%= @service_order.formatted_parts_value %></strong></dd>
          
          <dt class="col-sm-4">Valor Total:</dt>
          <dd class="col-sm-8">
            <h4 class="text-primary mb-0">
              <strong><%= @service_order.formatted_total_value %></strong>
            </h4>
          </dd>
        </dl>

        <hr>

        <dl class="row mb-0">
          <dt class="col-sm-4">Status do Pagamento:</dt>
          <dd class="col-sm-8">
            <% if @service_order.payment_status.present? %>
              <span class="badge <%= @service_order.payment_status_badge_class %>">
                <%= @service_order.payment_status.humanize %>
              </span>
            <% else %>
              -
            <% end %>
          </dd>
          
          <dt class="col-sm-4">Forma de Pagamento:</dt>
          <dd class="col-sm-8"><%= @service_order.payment_method || "-" %></dd>
          
          <dt class="col-sm-4">Data do Pagamento:</dt>
          <dd class="col-sm-8">
            <%= @service_order.payment_date ? l(@service_order.payment_date, format: :long) : "-" %>
          </dd>

          <% if @service_order.notes.present? %>
            <dt class="col-sm-4">Observações:</dt>
            <dd class="col-sm-8"><%= simple_format(@service_order.notes) %></dd>
          <% end %>
        </dl>
      </div>
    </div>
  </div>
  
  <div class="col-md-4">
    <div class="card mb-4">
      <div class="card-header">
        <h5 class="mb-0">Ações Rápidas</h5>
      </div>
      <div class="card-body">
        <div class="d-grid gap-2">
          <% if @service_order.can_be_completed? %>
            <%= button_to "✓ Marcar como Concluída", 
                          complete_service_order_path(@service_order),
                          method: :patch,
                          class: "btn btn-success",
                          data: { confirm: "Confirmar conclusão da OS?" } %>
          <% end %>
          
          <% if @service_order.can_be_cancelled? %>
            <%= button_to "✗ Cancelar OS", 
                          cancel_service_order_path(@service_order),
                          method: :patch,
                          class: "btn btn-warning",
                          data: { confirm: "Confirmar cancelamento da OS?" } %>
          <% end %>
          
          <% if @service_order.in_progress? %>
            <button class="btn btn-info" disabled>✓ Em Andamento</button>
          <% end %>
          
          <% if @service_order.completed? %>
            <button class="btn btn-success" disabled>✓ Concluída</button>
          <% end %>
          
          <% if @service_order.cancelled? %>
            <button class="btn btn-secondary" disabled>✗ Cancelada</button>
          <% end %>
        </div>
      </div>
    </div>
    
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">Histórico</h5>
      </div>
      <div class="card-body">
        <ul class="list-unstyled">
          <li class="mb-2">
            <small class="text-muted">
              Criada em <%= l(@service_order.created_at, format: :short) %>
            </small>
          </li>
          <li class="mb-2">
            <small class="text-muted">
              Última atualização em <%= l(@service_order.updated_at, format: :short) %>
            </small>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
