<div class="container mt-4">
  <h1><i class="fas fa-file-alt"></i> Relatórios</h1>
  
  <div class="row g-4 mt-3">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><i class="fas fa-clipboard-list"></i> Ordens por Período</h5>
          <p class="card-text">Relatório detalhado de ordens de serviço por período.</p>
          <%= link_to "Gerar Relatório", orders_by_period_reports_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><i class="fas fa-dollar-sign"></i> Receita</h5>
          <p class="card-text">Relatório financeiro de receitas e faturamento.</p>
          <%= link_to "Gerar Relatório", revenue_reports_path, class: "btn btn-success" %>
        </div>
      </div>
    </div>

    <% if current_user.admin? %>
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><i class="fas fa-user-tie"></i> Desempenho de Técnicos</h5>
            <p class="card-text">Análise de desempenho e produtividade dos técnicos.</p>
            <%= link_to "Gerar Relatório", technicians_reports_path, class: "btn btn-info" %>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><i class="fas fa-users"></i> Clientes</h5>
            <p class="card-text">Relatório de clientes e histórico de serviços.</p>
            <%= link_to "Gerar Relatório", customers_reports_path, class: "btn btn-warning" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
