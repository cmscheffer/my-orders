<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h3><i class="fas fa-user"></i> Detalhes do Usuário</h3>
          <div>
            <%= link_to edit_user_path(@user), class: "btn btn-sm btn-warning" do %>
              <i class="fas fa-edit"></i> Editar
            <% end %>
            <%= link_to users_path, class: "btn btn-sm btn-secondary" do %>
              <i class="fas fa-arrow-left"></i> Voltar
            <% end %>
          </div>
        </div>
        <div class="card-body">
          <table class="table table-borderless">
            <tbody>
              <tr>
                <th width="200">Nome:</th>
                <td><strong><%= @user.name %></strong></td>
              </tr>
              <tr>
                <th>Email:</th>
                <td><%= @user.email %></td>
              </tr>
              <tr>
                <th>Papel:</th>
                <td>
                  <% if @user.admin? %>
                    <span class="badge bg-danger">Administrador</span>
                  <% else %>
                    <span class="badge bg-secondary">Técnico</span>
                  <% end %>
                </td>
              </tr>
              <tr>
                <th>Criado em:</th>
                <td><%= l(@user.created_at, format: :long) %></td>
              </tr>
              <tr>
                <th>Última atualização:</th>
                <td><%= l(@user.updated_at, format: :long) %></td>
              </tr>
              <% if @user == current_user %>
                <tr>
                  <td colspan="2">
                    <div class="alert alert-info mb-0">
                      <i class="fas fa-info-circle"></i> Este é seu perfil
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <% if @user.service_orders.any? %>
            <hr>
            <h5><i class="fas fa-clipboard-list"></i> Estatísticas</h5>
            <div class="row mt-3">
              <div class="col-md-4">
                <div class="card bg-primary text-white">
                  <div class="card-body text-center">
                    <h3><%= @user.service_orders.count %></h3>
                    <p class="mb-0">Ordens Criadas</p>
                  </div>
                </div>
              </div>
              <div class="col-md-4">
                <div class="card bg-success text-white">
                  <div class="card-body text-center">
                    <h3><%= @user.service_orders.completed.count %></h3>
                    <p class="mb-0">Ordens Concluídas</p>
                  </div>
                </div>
              </div>
              <div class="col-md-4">
                <div class="card bg-warning text-white">
                  <div class="card-body text-center">
                    <h3><%= @user.service_orders.where(status: [:pending, :in_progress]).count %></h3>
                    <p class="mb-0">Ordens Pendentes</p>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
