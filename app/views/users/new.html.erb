<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h3><i class="fas fa-user-plus"></i> Novo Usuário</h3>
        </div>
        <div class="card-body">
          <% if flash[:alert] %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <h5 class="alert-heading">
                <i class="fas fa-exclamation-triangle"></i>
                <%= flash[:alert] %>
              </h5>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% end %>

          <%= form_with model: @user, local: true do |f| %>
            <% if @user.errors.any? %>
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <h4 class="alert-heading">
                  <i class="fas fa-exclamation-circle"></i>
                  ❌ Não foi possível criar o usuário
                </h4>
                <hr>
                <p class="mb-2"><strong><%= pluralize(@user.errors.count, "erro foi encontrado", "erros foram encontrados") %>:</strong></p>
                <ul class="mb-0">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><strong><%= message %></strong></li>
                  <% end %>
                </ul>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
            <% end %>

            <div class="mb-3">
              <%= f.label :name, "Nome", class: "form-label" %>
              <%= f.text_field :name, 
                  class: "form-control #{@user.errors[:name].any? ? 'is-invalid' : ''}", 
                  required: true %>
              <% if @user.errors[:name].any? %>
                <div class="invalid-feedback d-block">
                  <%= @user.errors[:name].join(', ') %>
                </div>
              <% end %>
            </div>

            <div class="mb-3">
              <%= f.label :email, "Email", class: "form-label" %>
              <%= f.email_field :email, 
                  class: "form-control #{@user.errors[:email].any? ? 'is-invalid' : ''}", 
                  required: true %>
              <% if @user.errors[:email].any? %>
                <div class="invalid-feedback d-block">
                  <%= @user.errors[:email].join(', ') %>
                </div>
              <% end %>
            </div>

            <!-- Requisitos de Senha -->
            <%= password_requirements_list %>

            <div class="mb-3">
              <%= f.label :password, "Senha", class: "form-label" %>
              <%= f.password_field :password, 
                  class: "form-control #{@user.errors[:password].any? ? 'is-invalid' : ''}", 
                  required: true, 
                  autocomplete: "new-password",
                  data: { strength_indicator: "password-strength-indicator-new-user" } %>
              <% if @user.errors[:password].any? %>
                <div class="invalid-feedback d-block">
                  <strong>Problemas com a senha:</strong>
                  <ul class="mb-0 mt-1">
                    <% @user.errors[:password].each do |error| %>
                      <li><%= error %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
              
              <!-- Indicador de Força -->
              <div id="password-strength-indicator-new-user" class="password-strength-indicator mt-2" style="display: none;">
                <small class="text-muted">Força da senha: </small>
                <span class="password-strength-text fw-bold"></span>
                <div class="progress mt-1" style="height: 5px;">
                  <div class="progress-bar password-strength-bar" 
                       role="progressbar"
                       style="width: 0%"
                       aria-valuenow="0"
                       aria-valuemin="0"
                       aria-valuemax="100"></div>
                </div>
              </div>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation, "Confirmar Senha", class: "form-label" %>
              <%= f.password_field :password_confirmation, 
                  class: "form-control #{@user.errors[:password_confirmation].any? ? 'is-invalid' : ''}", 
                  required: true, 
                  autocomplete: "new-password" %>
              <% if @user.errors[:password_confirmation].any? %>
                <div class="invalid-feedback d-block">
                  <%= @user.errors[:password_confirmation].join(', ') %>
                </div>
              <% end %>
            </div>

            <% if current_user.admin? %>
              <div class="mb-3">
                <%= f.label :role, "Papel", class: "form-label" %>
                <%= f.select :role, 
                    options_for_select([['Usuário', 'user'], ['Administrador', 'admin']], @user.role),
                    {}, 
                    class: "form-select" %>
                <small class="form-text text-muted">
                  <strong>Administrador:</strong> Acesso total ao sistema<br>
                  <strong>Usuário:</strong> Acesso às suas próprias ordens
                </small>
              </div>
            <% end %>

            <div class="d-flex justify-content-between">
              <%= link_to "Cancelar", users_path, class: "btn btn-secondary" %>
              <%= f.submit "Criar Usuário", class: "btn btn-success" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
