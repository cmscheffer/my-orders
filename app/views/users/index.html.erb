<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-users"></i> Usuários</h1>
    <%= link_to new_user_path, class: "btn btn-primary" do %>
      <i class="fas fa-plus"></i> Novo Usuário
    <% end %>
  </div>

  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Email</th>
              <th>Papel</th>
              <th>Criado em</th>
              <th width="200">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <strong><%= user.name %></strong>
                  <% if user == current_user %>
                    <span class="badge bg-info">Você</span>
                  <% end %>
                </td>
                <td><%= user.email %></td>
                <td>
                  <% if user.admin? %>
                    <span class="badge bg-danger">Administrador</span>
                  <% else %>
                    <span class="badge bg-secondary">Técnico</span>
                  <% end %>
                </td>
                <td><%= l(user.created_at, format: :short) %></td>
                <td>
                  <%= link_to user_path(user), class: "btn btn-sm btn-info" do %>
                    <i class="fas fa-eye"></i>
                  <% end %>
                  <%= link_to edit_user_path(user), class: "btn btn-sm btn-warning" do %>
                    <i class="fas fa-edit"></i>
                  <% end %>
                  <% if user != current_user %>
                    <%= link_to user_path(user), method: :delete, data: { confirm: 'Tem certeza que deseja excluir este usuário?' }, class: "btn btn-sm btn-danger" do %>
                      <i class="fas fa-trash"></i>
                    <% end %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <% if @users.empty? %>
        <div class="text-center text-muted py-5">
          <i class="fas fa-users fa-3x mb-3"></i>
          <p>Nenhum usuário cadastrado.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
