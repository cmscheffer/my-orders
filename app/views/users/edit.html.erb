<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h3><i class="fas fa-user-edit"></i> Editar Usuário</h3>
        </div>
        <div class="card-body">
          <%= form_with model: @user, local: true do |f| %>
            <% if @user.errors.any? %>
              <div class="alert alert-danger">
                <h5><%= pluralize(@user.errors.count, "erro") %> impedem que este usuário seja salvo:</h5>
                <ul class="mb-0">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= f.label :name, "Nome", class: "form-label" %>
              <%= f.text_field :name, class: "form-control", required: true %>
            </div>

            <div class="mb-3">
              <%= f.label :email, "Email", class: "form-label" %>
              <%= f.email_field :email, class: "form-control", required: true %>
            </div>

            <div class="alert alert-info">
              <i class="fas fa-info-circle"></i> 
              <strong>Alterar senha:</strong> Preencha apenas se desejar alterar a senha. Deixe em branco para manter a senha atual.
            </div>

            <div class="mb-3">
              <%= f.label :password, "Nova Senha", class: "form-label" %>
              <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
              <small class="form-text text-muted">Mínimo 6 caracteres (deixe em branco para não alterar)</small>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation, "Confirmar Nova Senha", class: "form-label" %>
              <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
            </div>

            <% if current_user.admin? && @user != current_user %>
              <div class="mb-3">
                <%= f.label :role, "Papel", class: "form-label" %>
                <%= f.select :role, 
                    options_for_select([['Técnico', 'technician'], ['Administrador', 'admin']], @user.role),
                    {}, 
                    class: "form-select" %>
                <small class="form-text text-muted">
                  <strong>Administrador:</strong> Acesso total ao sistema<br>
                  <strong>Técnico:</strong> Acesso apenas às suas ordens
                </small>
              </div>
            <% end %>

            <% if current_user.admin? && @user == current_user %>
              <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle"></i> 
                Você não pode alterar seu próprio papel de administrador.
              </div>
            <% end %>

            <div class="d-flex justify-content-between">
              <%= link_to "Cancelar", users_path, class: "btn btn-secondary" %>
              <%= f.submit "Salvar Alterações", class: "btn btn-success" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
